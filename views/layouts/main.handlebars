  {{{body}}}

  <script type="text/javascript">

    let input = document.querySelector("#text");
    let fetchBtn = document.querySelector("#fetch");
    
    let contentDiv = document.querySelector('#content');
    let loads = document.querySelector('#load');


    async function fetchData() {

      fetch(`/verse/${input.value.replace(":", "/").replace(" ", "/").replace('song/of solomon', 'sng/').replace(' ', '').toLowerCase()}`);
     
    }
    function refresh() {
      setTimeout(function () { location.reload(); }, 2050);
    }
     function refresh2() {
      setTimeout(function () { location.reload(); contentDiv.style.display = 'none'; loads.className = 'loader'; loads.style.display = 'block';  }, 4500);
    }


    fetchBtn.addEventListener("click", function () { contentDiv.style.display = 'none'; loads.className = 'loader'; loads.style.display = 'block'; fetchData(); refresh(); refresh();  });

  </script>
</body>

</html>
